{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    // 确保这一项是true来保留类名等元数据
    "declaration": true,
    // 可选，但有助于调试
    "preserveConstEnums": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    // "declarationDir": "dist/type",// 声明文件打包的位置
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": ["jest", "node"],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "tests/**/*.js"], // 指定包含哪些文件进行编译
  "exclude": ["bin"] // 排除不需要编译的文件
}

